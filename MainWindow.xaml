<Window x:Class="QuickSetup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickSetup"
        mc:Ignorable="d"
        Title="QuickSetup" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="HelloLabel" Content="Welcome to QuickSetup!" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Name="ClickMeButton" Content="Click Me" Width="100" Height="30" Click="ClickMeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
